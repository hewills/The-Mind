function room_AfterFadeIn()
{

//Show Splash animation
  oSplash.SetView(3);
  oSplash.Visible = true;
  oSplash.Animate(0, 4, eOnce, eBlock, eForwards);
  
  Wait(10);  //205
  
  //Remove Splash label
  gHISplash.Visible = false;
  oSplash.Visible = false;
  
  Mouse.Visible = true;
  mouse.UseDefaultGraphic();
  
  cPlayer.ChangeRoom(2);
  
}
